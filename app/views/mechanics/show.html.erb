<h1><%= "#{@mechanic.name}'s Page" %></h1>

<%= "Years of experience: #{@mechanic.years_of_experience} "%></br></br>


<h3> Currently working on: </h3>
<% @mechanic.rides.each do |ride| %>

  <%= ride.name %></br>

  <% end %>
<h3> Add a ride to workload: </h3>
  <%= form_with url: "/mechanic_rides/", method: :create, data: { turbo: false} do |f| %>
  <%= f.hidden_field :mechanic_id, :value=>"#{@mechanic.id}" %>
  <%= f.label :ride_id, "Ride Id:" %>
  <%= f.number_field :ride_id %>

    <%= f.submit "Submit" %>
<% end %>